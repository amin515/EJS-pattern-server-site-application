
    
    
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="add-student-content d-flex justify-content-between">
                            <h2>All students</h2>
                            <a class="btn btn-primary" href="/students/create">Add Student</a>
                        </div>
                        <hr>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Cell</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach((element, index )=> { %>
                                    <tr>
                                        <td><%= element.name %> </td>
                                        <td><%= element.email %></td>
                                        <td><%= element.cell %></td>
                                        <td><img style="width: 40px; height: 40px;" src="/assets/upload/<%= element.photo %> "alt="">
                                        </td>
                                        <td>
                                           <a class="btn btn-primary btn-sm" href="/students/<%= element._id %>"><i class="fas fa-eye"></i></a>
                                           <a class="btn btn-warning btn-sm" href="/students/update<%= element._id %>"><i class="fas fa-edit"></i></a>
                                           <a class="btn btn-danger btn-sm" href="/students/delete<%= element._id %>"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

